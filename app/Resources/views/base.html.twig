<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}AVED - Association pour la vie étudiante à Descartes{% endblock %}</title>

        <meta charset="UTF-8" />
        <!--[if IE]>
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <![endif]-->
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!--[if lt IE 9]>
            <script src="js/vendor/html5shiv.min.js"></script>
            <script src="js/vendor/respond.min.js"></script>
        <![endif]-->
        
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/main.css') }}" id="color-switcher-link">
            <link rel="stylesheet" href="{{ asset('css/animations.css') }}">
            <link rel="stylesheet" href="{{ asset('css/fonts.css') }}">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('example/logo_small.png') }}" />
    </head>

    <body>
        {% block navbar %}
        <section id="topline" class="table_section">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <a href="{{ path('avedblog_homepage') }}" class="logo top_logo">
                            <img src="{{ asset('example/logo.png') }}" alt=""> <strong>AVED</strong>
                        </a>
                    </div>

                    <div class="col-sm-6">
                        <p id="social" class="text-sm-right">
                            <a class="socialico-facebook" href="#" title="Facebook">#</a>
                        </p>

                    </div>

                </div>
            </div>
        </section>

        <header id="header" class="gradient">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <nav id="mainmenu_wrapper">
                            <ul id="mainmenu" class="nav sf-menu">
                                <li>
                                    <a href="{{ path('avedblog_homepage') }}">Accueil</a>
                                </li>
                                <li>
                                    <a href="{{ path('avedblog_campuspage') }}">Le Campus Descartes</a>
                                    <ul>
                                        <li>
                                            <a href="{{ path('avedblog_mappage') }}">Map</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('avedblog_ecolespage') }}">Les écoles</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('avedblog_associationspage') }}">Les Associations</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="{{ path('avedblog_eventpage') }}">Evénements</a>
                                    <ul>
                                        <li>
                                            <a href="{{ path('avedblog_tropheedtpage') }}">Trophée Descartes 2013</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('avedblog_tropheedqpage') }}">Trophée Descartes 2014</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('avedblog_pimpmdpage') }}">Pimp My Descartes</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="{{ path('avedblog_galeriepage') }}">Galerie</a>
                                </li>
                                <li>
                                    <a href="{{ path('avedblog_contactpage') }}">Contact</a>
                                </li>
                            </ul>  
                        </nav>
                    </div>
                </div>
            </div>
        </header>
        <span id="toggle_menu"><span></span></span>
        {% endblock %}

        {% block body %}
        {% endblock %}

        <section id="pages" class="light_section bottom_section">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="teaser teaser_icon to_animate" data-animation="fadeInDown">
                            <i class="rt-icon-diamond2"></i>
                            <h4>
                                <a href="#">
                                    <strong>A propos</strong>
                                    de nous
                                </a>
                            </h4>
                            <p>Contactez notre équipe et informez-vous</p>
                            <p class="teaser_button">
                                <a href="{{ path('avedblog_contactpage') }}" class="theme_button">Contact</a>
                            </p>
                        </div>

                    </div>

                    <div class="col-sm-4">
                        <div class="teaser teaser_icon to_animate" data-animation="fadeInDown">
                            <i class="rt-icon-camera2"></i>
                            <h4>
                                <a href="#">
                                    <strong>Notre</strong>
                                    Galerie
                                </a>
                            </h4>
                            <p>Venez voir nos photos</p>
                            <p class="teaser_button">
                                <a href="{{ path('avedblog_galeriepage') }}" class="theme_button">Galerie</a>
                            </p>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="teaser teaser_icon to_animate" data-animation="fadeInDown">
                            <i class="rt-icon-tag2"></i>
                            <h4>
                                <a href="#">
                                    <strong>Page</strong>
                                    Facebook
                                </a>
                            </h4>
                            <p>Visitez notre page</p>
                            <p class="teaser_button">
                                <a href="https://www.facebook.com/AVEDescartes?fref=ts" class="theme_button">Facebook</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        </br></br>
        <section id="copyright" class="grey_section bg_image">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 text-center to_animate">
                        <a href="#" class="logo bottom_logo">
                            <img src="{{ asset('example/logo.png') }}" alt="">
                            <strong>AVED</strong>
                        </a>
                        <p>
                            AVED &copy; 2013 - Association de la vie étudiante à Descartes
                        </p>
                    </div>
                </div>
            </div>
        </section>

        {% block javascripts %}
            <script src="{{ asset('js/vendor/modernizr-2.6.2.min.js') }}"></script>
            <!-- libraries -->
            <script src="{{ asset('js/vendor/jquery-1.11.1.min.js') }}"></script>
            <script src="{{ asset('js/vendor/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/vendor/jquery.appear.js') }}"></script>

            <!-- superfish menu  -->
            <script src="{{ asset('js/vendor/jquery.hoverIntent.js') }}"></script>
            <script src="{{ asset('js/vendor/superfish.js') }}"></script>
            
            <!-- page scrolling -->
            <script src="{{ asset('js/vendor/jquery.easing.1.3.js') }}"></script>
            <script src="{{ asset('js/vendor/jquery.ui.totop.js') }}"></script>
            <script src="{{ asset('js/vendor/jquery.localscroll-min.js') }}"></script>
            <script src="{{ asset('js/vendor/jquery.scrollTo-min.js') }}"></script>
            <script src='{{ asset('js/vendor/jquery.parallax-1.1.3.js') }}'></script>

            <!-- widgets -->
            <script src="{{ asset('js/vendor/jquery.easypiechart.min.js') }}"></script><!-- pie charts -->
            <script src='{{ asset('js/vendor/jquery.countTo.js') }}'></script><!-- digits counting -->
            <script src="{{ asset('js/vendor/jquery.prettyPhoto.js') }}"></script><!-- lightbox photos -->
            <script src='{{ asset('js/vendor/jquery.plugin.min.js') }}'></script><!-- plugin creator for comingsoon counter -->
            <script src='{{ asset('js/vendor/jquery.countdown.js') }}'></script><!-- coming soon counter -->        
            <script src='{{ asset('js/vendor/jflickrfeed.min.js') }}'></script><!-- flickr -->
            <script src='{{ asset('twitter/jquery.tweet.min.js') }}'></script><!-- twitter -->

            <!-- sliders, filters, carousels -->
            <script src="{{ asset('js/vendor/jquery.isotope.min.js') }}"></script>
            <script src='{{ asset('js/vendor/owl.carousel.min.js') }}'></script>
            <script src='{{ asset('js/vendor/jquery.flexslider-min.js') }}'></script>

            <!-- custom scripts -->
            <script src="{{ asset('js/plugins.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
